<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".ui.view.tourguide.TourGuideRegisterActivity">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/back_icon"
        android:text="@string/back"
        android:textColor="@color/md_theme_secondary"
        app:backgroundTint="@color/md_theme_onTertiary"
        app:icon="@drawable/icon_back"
        app:iconTint="@color/md_theme_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <TextView
        android:layout_width="264dp"
        android:layout_height="117dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/sign_up_as_a_tour_guide"
        android:textColor="@color/md_theme_onPrimary"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551" />

    <LinearLayout
        android:id="@+id/login_linear1"
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:background="@drawable/login_container_shape_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="@string/please_fill_out_the_form_below"
            android:textColor="@color/md_theme_secondary"
            android:textSize="20sp" />

        <com.muflidevs.paradisata.ui.view.customView.CustomUsernameEditText
            android:id="@+id/edtTxt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/user_login_icon"
            android:fontFamily="@font/poppins"
            android:hint="@string/username" />

        <com.muflidevs.paradisata.ui.view.customView.CustomPasswordEditText
            android:id="@+id/edtTxt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/user_login_password_icon"
            android:fontFamily="@font/poppins" />

        <com.muflidevs.paradisata.ui.view.customView.CustomEmailEditText
            android:id="@+id/edtTxt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/mail_icon"
            android:drawablePadding="4dp"
            android:fontFamily="@font/poppins"
            android:hint="@string/email" />

        <com.muflidevs.paradisata.ui.view.customView.CustomNoTelephoneEditText
            android:id="@+id/edtTxt_noTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/phone_icon"
            android:fontFamily="@font/poppins"
            android:hint="@string/no_telephone" />

        <com.muflidevs.paradisata.ui.view.customView.CustomButton
            android:id="@+id/btn_submit"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="35dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>